<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutRelative">

    <ImageView
        android:id="@+id/eulaImg"
        android:layout_width="126dp"
        android:layout_height="124dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="54dp"
        android:contentDescription="Imagen de Eula"
        app:srcCompat="@drawable/steamuserimages_a_akamaihd_net"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="80dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="51dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/eulaImg"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/eulaImg"
        android:layout_marginBottom="87dp"
        android:layout_marginEnd="164dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/eulaImg"
        android:text="Eula" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/eulaImg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/eulaImg"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="123dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="57dp"
        android:layout_toEndOf="@+id/eulaImg"
        android:text="Swagger Carry" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/eulaImg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/eulaImg"
        android:layout_marginBottom="-3dp"
        android:layout_marginEnd="146dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="108dp"
        android:layout_toEndOf="@+id/eulaImg"
        android:text="Skippeable" />

</RelativeLayout>